     <button onclick="redirect()" class="btn btn-primary" style="margin-left: 37%; margin-top: 10%;">Back to Home</button>   
     
</div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.3/particles.min.js"></script>
<script>

    window.onload = function () {

        Particles.init({
            selector: '.background',
            connectParticles: false,
            color: '#ffffff'
        });
