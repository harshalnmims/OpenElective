<style>
.background { 
    background: radial-gradient(circle, rgba(255, 0, 0, 0.5074404761904762) 0%, rgba(15, 28, 112, 1) 100%);
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    z-index: -1;
}
#mainDiv {
    background: rgb(255 255 255 / 80%);
    padding: 25px;
    position: absolute;
    min-width: 600px;
    max-width: 500px;
    min-height: 500px;
    height: 500px;
    top: calc(50% - 250px);
    left: calc(50% - 300px);
